<h1>Listing strawberries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strawberries.each do |strawberry| %>
      <tr>
        <td><%= strawberry.title %></td>
        <td><%= strawberry.body %></td>
        <td><%= link_to 'Show', strawberry %></td>
        <td><%= link_to 'Edit', edit_strawberry_path(strawberry) %></td>
        <td><%= link_to 'Destroy', strawberry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Strawberry', new_strawberry_path %>
