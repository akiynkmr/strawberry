%h1 Listing strawberries
%table
  %thead
    %tr
      %th Title
      %th Body
      %th{:colspan => "3"}
  %tbody
    - @strawberries.each do |strawberry|
      %tr
        %td= strawberry.title
        %td= strawberry.body
        %td= link_to 'Show', strawberry
        %td= link_to 'Edit', edit_strawberry_path(strawberry)
        %td= link_to 'Destroy', strawberry, method: :delete, data: { confirm: 'Are you sure?' }
%br
= link_to 'New Strawberry', new_strawberry_path
